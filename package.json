{
  "name": "kodilla-projekt",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass src/sass/style.scss --source-map true -w -o dist/css",
    "watch:browsersync": "browser-sync start --server --files ./ --cwd dist",
    "watch": "parallelshell \"npm run watch:sassprefixer\" \"npm run watch:browsersync\" ",
    "watch:sassprefixer": "node-sass src/sass/style.scss --source-map true -w -o dist/css && autoprefixer-cli -o dist/css/style.prefixed.css dist/css/style.css",
    "clean": "rimraf dist",
    "copy": "npm-run-all -p copy:*",
    "copy:html": "cpy \"**/*.html\" \"../dist\" --cwd=src --parents",
    "copy:scripts": "cpy \"**/*\" \"../../dist/scripts\" --cwd=src/scripts --parents",
    "copy:webfonts": "cpy \"**/*\" \"../../dist/webfonts\" --cwd=src/webfonts --parents",
    "copy:images": "cpy \"**/*\" \"../../dist/images\" --cwd=src/images --parents",
    "prebuild": "npm run clean",
    "build": "npm-run-all -p copy build:*",
    "build:sass": "node-sass src/sass/style.scss --output-style compressed -o dist/css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.7",
    "browsersync": "0.0.1-security",
    "cpy-cli": "^2.0.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2"
  }
}
